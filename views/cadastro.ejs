<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="./stylesheets/cadastro.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link
      href="https://fonts.googleapis.com/css2?family=Rokkitt:wght@100&display=swap"
      rel="stylesheet"
    />
    <title>Economize + | Cadastro</title>
  </head>
  <body>

    <%- include('./partials/_header') %>

    <div id="caixa-cadastro">
      <div id="form-box">
        <div id="form">
          <form action="/index" method="POST" enctype="multipart/form-data">
            <p id="bemvindo">Bem vindo ao cadastro da Economize+</p>
            <br />
            <% if(typeof(errors) != "undefined") { %> 
              <p style="color: red;font-weight: bold; font-size: 24px;">Error</p>
              <ul id="altura-lista" style="font-size: 20px;">
                <% errors.forEach((error) => { %>
                  <li id="altura-lista"><%= error.msg %></li>
                  <% }) %> 
              </ul>                      
            <% } %> 
            <br />
            <label class="label" for="nome">Nome</label>
            <br />
            <input class="input" type="text" id="nome" name="nome" placeholder="Informe o seu nome" required/>
            <br />
            <label class="label" for="sobrenome">Sobrenome</label>
            <br />
            <input class="input" type="text" id="sobrenome" name="sobrenome" placeholder="Informe o seu sobrenome" required/>
            <br />
            <label class="label" for="email">Email</label>
            <br />
            <input class="input" type="email" id="email" name="email" placeholder="Informe o seu email" required/> 
            <br />
            <label class="label" for="telefone">Celular</label>
            <br />
            <input class="input" type="tel" id="celular" name="celular" placeholder="Informe o seu celular"  maxlength="11" required/> <!-- pattern="[0-9]{2}-[0-9]{5}-[0-9]{4}" -->
            <br />
            <label class="label" for="dataNasc">Data de Nascimento</label>
            <br />
            <input class="input" type="date" id="dataNasc" name="dataNasc" required/>
            <br />
            <label class="label" for="senha">Crie uma senha</label>
            <br />
            <input class="input" type="password" id="senha" name="senha" placeholder="Crie uma senha" minlength="" required/>
            <br />
            <label class="label" for="confirmasenha">Confirme a senha</label>
            <br />
            <input class="input" type="password" id="confirmasenha" name="confirmasenha" placeholder="Confirme a senha" minlength="" required/>
            <br />                        
              <label class="label" for="image">Selecione uma foto de Perfil</label>
              <br />
              <input class="" type="file" name="image" accept="image/*" />        
            <br />
            <br />
            <div id="cadastrar_div">
              <button id="cadastrar" type="submit">Cadastrar</button>
            </div>
          </form>
        </div>
        <div id="form-right">
          <img src="./img/hand.png" height="" width="280" id="finance" />
        </div>
      </div>
    </div>
  </body>
</html>

